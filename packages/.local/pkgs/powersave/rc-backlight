#!/bin/bash
# /usr/lib/rc/sv.d/backlight

# sourcing our current rc.conf requires this to be a bash script
. /usr/lib/rc/functions

case "$1" in
    start)
        stat_busy "Setting the backlight"
        setsid -f light -S 40 >/dev/null 2>&1
        add_daemon backlight
        stat_done
        ;;
    *)
        echo "usage: $0 {start}"
        exit 1
        ;;
esac
