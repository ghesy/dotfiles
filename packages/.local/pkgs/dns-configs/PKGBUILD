pkgname=dns-configs
pkgdesc="configure DNS-over-HTTPS and DNS caching"
pkgver=r3
pkgrel=1
arch=(any)
depends=(networkmanager unbound unbound-runit dns-over-https dns-over-https-runit)
source=(
    doh-client.conf
    nm-no-rc.conf
    resolv.conf
    unbound.conf
)
md5sums=(SKIP SKIP SKIP SKIP)
install=restore-orig.install

package() {
    install -vDm644 resolv.conf -t "$pkgdir"/etc/
    install -vDm644 unbound.conf -t "$pkgdir"/etc/unbound/
    install -vDm644 doh-client.conf -t "$pkgdir"/etc/dns-over-https/
    install -vDm644 nm-no-rc.conf "$pkgdir"/usr/lib/NetworkManager/conf.d/no-rc.conf
}
