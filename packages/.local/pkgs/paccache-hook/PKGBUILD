pkgname=paccache-hook
pkgdesc="hook to cleanup pacman cache"
pkgver=r3
pkgrel=1
arch=(any)
depends=(pacman-contrib)
source=(paccache.hook paccache.sh)
md5sums=(SKIP SKIP)

package() {
    install -vDm755 paccache.sh "$pkgdir"/usr/share/libalpm/scripts/paccache
    install -vDm644 paccache.hook -t "$pkgdir"/usr/share/libalpm/hooks/
}
