    dmenu = "/usr/local/bin/dmenu"

[urgency_low]
    background = "#151515"
    foreground = "#bbbbbb"
    timeout = 8

[urgency_normal]
    background = "#151515"
    foreground = "#bbbbbb"
    timeout = 8

[urgency_critical]
    background = "#151515"
    foreground = "#bbbbbb"
    frame_color = "#ff0000"
    timeout = 16

