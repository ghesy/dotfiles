# vim:ft=sudoers
Cmnd_Alias SV = /usr/bin/sv, /usr/bin/rsm

Cmnd_Alias PROG = \
    /usr/bin/resolvconf, \
    /usr/bin/protonvpn, \
    /usr/bin/nethogs, \
    /usr/bin/iotop

Cmnd_Alias POWER = \
    /sbin/halt, \
    /sbin/reboot, \
    /sbin/poweroff, \
    /sbin/shutdown, \
    /usr/bin/grub-reboot, \
    /usr/bin/grub-entries

%wheel ALL=(ALL) NOPASSWD: SV, PROG, POWER
