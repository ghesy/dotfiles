#!/bin/sh

echo 

pidof -q NetworkManager || exit

conns="$(nmcli -g type,device conn show --active)"
type="$(echo "$conns" | head -n1 | cut -d: -f1)"
dev="$(echo "$conns"  | head -n1 | cut -d: -f2)"

[ -z "$conns" ] && echo  && exit
echo "$type" | grep -qE 'tun|vpn' && echo  && exit

is_usb()
{
    nmcli -g general.udi dev show $dev | grep -q '\<usb'
}

is_metered()
{
    nmcli -g general.metered dev show $dev | grep -q yes
}

case $type in
    *wireless*|*wifi*) echo 直;;
    *bluetooth*) echo  ;;
    *ethernet*)
        is_usb && echo 禍 || {
            [ "$(echo "$conns" | wc -l)" -gt 1 ] && echo 
        }
    ;;
    *) echo ? ;;
esac

is_metered && echo ﰒ
nmcli -g general.ip4-connectivity dev show $dev | grep -vq full && echo x && exit
echo "$conns" | cut -d: -f1 | grep -qE 'tun|vpn' && echo  && exit
echo 
