#!/bin/bash
# download videos using yt-dlp and aria2.

[ -f "${1:?}" ] && exit 1
cd /media/downloads || cd ~/Downloads || cd ~ || exit 1

read -p 'Enter resolution [ 480 (Default) / 720 / ... / b (Best), q (Quit) ]: ' res
case $res in
    q) exit ;;
    b) res='' ;;
    '') res=480 ;;
    *) [ "$res" -eq "$res" ] || res=480 ;;
esac
echo ${res:-Best} selected.

title=$($(getproxy "$1") yt-dlp -e "$1")
for i in {1..10}; do
    $(getproxy "$1") yt-dlp ${res:+-S "+res:$res,codec,abr~$((res/6))"} --add-metadata \
    --no-mtime --sub-lang=en --write-sub --write-auto-sub --embed-subs  \
    --compat-options no-keep-subs --embed-thumbnail --downloader aria2c \
    --downloader-args aria2c:--async-dns=false "${@#ytdl://*}" && break
    if [ $i -eq 10 ]; then
        notify-send ytdl Failed:$'\n'"$title"
        exit 1
    fi
    sleep 30
done
notify-send ytdl Done:$'\n'"$title"
