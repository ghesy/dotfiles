#!/bin/sh
# (re)start dunst with pywal colors (if they exist).
colors=~/.cache/wal/colors.sh
killall -q -9 dunst
if [ ! -r $colors ]; then
    setsid -f dunst >/dev/null 2>&1
else
    . $colors
    setsid -f dunst \
        -frame_color "$color2" \
        -lb "$color0"  -lf "$color14" -lh "$color9" \
        -nb "$color0"  -nf "$color14" -nh "$color9" \
        -cb "$color0"  -cf "$color14" -ch "$color9" -cf "$color9" \
        >/dev/null 2>&1
fi
