#!/bin/bash
# select and watch football streams from AparatSport.
# requires yt-dlp, zenity, mpv.
yt-dlp -O '%(description)s
%(original_url)s' \
    https://www.aparat.com/AparatSport{1..5}/live 2>/dev/null |
    zenity --list --text='Fetching Streams...' --column='' \
    --column='' --print-column=2 --hide-column=2 --hide-header |
    xargs -r mpv --really-quiet --title='Football Stream'
