#!/bin/bash
# with this script, you can run stuff.

# paths
conf=~/.config/stuff/config
localdir=~/.local/share/local/stuff.d

main()
{
    set -e
    shopt -s nullglob

    eval "$(parse INIT)"
    case $1 in
        -m)
            sel=$(parse | dmenu -p Stuff -sb '#104459')
            eval "$(parse "${sel:?}")" ;;
        *) parse "$@" ;;
    esac
}

parse()
{
    awk -v alias="$1" '
        BEGIN { FS = "[\t ]*,[\t ]*"; found = 0 }
        /^[^\t #]/ {
            for (i = 1; i <= NF; i++) {
                if (length(alias) == 0 && $0 != "INIT") {
                    printf("%s\n", $i)
                } else if ($i == alias) {
                    found = 1
                    FS = ""
                    next
                }
            }
        }
        found {
            if ($1 !~ /^[\t ]$/)
                exit
            print
        }
    ' "$conf" "$localdir"/*
}

main "$@"
