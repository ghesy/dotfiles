#!/bin/sh
# show current bandwidth usage.

# config
duration=0.5

sample() {
    awk -v n=$1 '/:/ && !/lo/ && !/tun/ {d+=$2; u+=$10} END{print "d"n"="d";u"n"="u}' /proc/net/dev
}

speed() {
    echo "($2 - $1) / $duration / 1024" | bc | tr -d '\n'
    echo ' KB'
}

eval $(sample 1); sleep $duration; eval $(sample 2)

printf 'D: '
speed $d1 $d2
printf 'U: '
speed $u1 $u2
