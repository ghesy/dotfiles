#!/bin/sh
# open the given path in lf.
if [ "$1" = -a ]; then
    shift
    tmp=$(mktemp) || exit
    lf -last-dir-path="$tmp" "$@"
    [ ! -f "$tmp" ] && exit
    dir=$(cat "$tmp")
    rm -f "$tmp"
    [ -d "$dir" ] && cd "$dir"
    TMUX= exec ${SHELL:-}
else
    path=${1:-$PWD}
    [ -d "$path" ] && path=${path%/}/
    setsid -f ${TERMINAL:?} -e "$0" -a "$path" >/dev/null 2>&1
fi
