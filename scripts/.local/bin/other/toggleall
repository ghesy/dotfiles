#!/bin/sh
# toggle the currently playing players.

# file to save the playing players in
state="${XDG_RUNTIME_DIR:-/tmp}/toggleall"

main()
{
    case "$1" in
        restore) restore ;;
        pause) pause ;;
        *) toggle ;;
    esac
}

pause()
{
    get_mpris > "$state"
    mpc pause >/dev/null &
    playerctl -a pause &
    wait
    return 0
}

restore()
{
    [ -r "$state" ] && rm -f "$state" && xargs -a "$state" -L1 playerctl play -p
}

toggle()
{
    [ -s "$state" ] && restore || pause
}

get_mpris()
{
    playerctl -a status -f '{{playerInstance}}	{{lc(status)}}' 2>/dev/null |
        grep playing | cut -f1
}

main "$@"
