#!/bin/sh
# toggle the currently playing players.

# file to save the playing players in
save="${XDG_RUNTIME_DIR:-/tmp}/toggleall-save"

main()
{
    case "$1" in
        restore) restore ;;
        *)
            playing="$(get_playing)"
            case "$1" in
                pause) pause ;;
                *) toggle ;;
            esac
        ;;
    esac
}

toggle()
{
    if [ -z "$playing" ]; then
        restore
    else
        pause
    fi
}

pause()
{
    [ -z "$playing" ] && return 1
    printf '%s\n' "$playing" > "$save"
    playerctl -a pause
}

restore()
{
    [ -r "$save" ] || return 1
    xargs -a "$save" -L1 playerctl play -p
    rm "$save"
}

get_playing()
{
    playerctl -a status -f '{{playerInstance}}	{{lc(status)}}' |
            grep playing | cut -f1
}

main "$@"
exit
