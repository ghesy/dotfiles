#!/bin/sh
# sxiv image previews.
# requires sxiv, xdotool, exiv2, bc, pwait(procps-ng), tput(ncurses).

img=${1:?}
w=${2:?}
h=${3:?}
x=${4:?}
y=${5:?}
ID=${6:-${id:?}}

# if pid is given, check wether it's an integer
pid=${7:-$id}
[ -z "$pid" ] || [ "$pid" -eq "$pid" ] || exit 1

# calculate the width and height of each terminal cell in pixels
eval "$(xdotool getwindowgeometry --shell ${WINDOWID:?})"
hp=$((${HEIGHT:?}/$(tput lines)))
wp=$((${WIDTH:?}/$(tput cols)))
[ $? -ne 0 ] && exit 1
tx=${X:?}
ty=${Y:?}

# calculate the geometry of the sxiv window
eval "$(exiv2 "$img" 2>/dev/null | sed -n -e 's/^Image size \+: \+\([0-9]\+\) \+x \+\([0-9]\+\)/sw=\1;sh=\2/p')"
hh=$((h*hp))
ww=$((w*wp))
[ "${sh:?}" -gt "$hh" ] && { sw=$(echo "scale=5; $sw*($hh/$sh)" | bc); sw=${sw%.*}; sh=$hh ;}
[ "${sw:?}" -gt "$ww" ] && { sh=$(echo "scale=5; $sh*($ww/$sw)" | bc); sh=${sh%.*}; sw=$ww ;}
sx=$((x*wp))
sy=$((y*hp))

# if the mouse is in the area of sxiv, move it
eval "$(xdotool getmouselocation --shell)"
[ "${X:?}" -ge "$((tx+sx))" ] && [ "$X" -le "$((tx+sx+sw))" ] &&
[ "${Y:?}" -ge "$((ty+sy))" ] && [ "$Y" -le "$((ty+sy+sh))" ] &&
xdotool mousemove $((tx+sx-2)) $((ty+sy-2))

# launch the preview
rand=$(shuf -n1 -i10000-99999)
tmp=${XDG_RUNTIME_DIR:-${TMPDIR:-/tmp}}
sxivpidfile=$tmp/sxip.sxiv.$ID.$rand
pidfile=$tmp/sxip.pid.$ID.$rand
( (
    trap '' HUP
    sxiv -ab -e "${WINDOWID:?}" -g "${sw}x${sh}+${sx}+${sy}" "$img" &
    echo $! > "$sxivpidfile"
    sxivpid=$!
    if [ -n "$pid" ]; then
        echo "$pid" > "$pidfile"
        pwait -F "$pidfile" &
        echo $! >> "$sxivpidfile"
        wait $!
        kill $sxivpid
    else
        wait
    fi
    rm -f "$sxivpidfile" "$pidfile"
) & ) >/dev/null 2>&1
