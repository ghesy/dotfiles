# zathura's config

set selection-clipboard clipboard
set scroll-page-aware true
set scroll-step 100
set scroll-hstep 200
set guioptions sv
set statusbar-basename true
set window-title-basename true
set recolor true
set recolor-keephue true
set highlight-transparency 0.75

set recolor-lightcolor "#181818"
set inputbar-bg "#181818"
set default-bg "#181818"
set statusbar-bg "#181818"
set notification-error-bg "#181818"
set recolor-darkcolor "#cccccc"
set statusbar-fg "#cccccc"
set inputbar-fg "#cccccc"
set notification-error-fg "#a95551"

map g goto top
map K zoom in
map J zoom out
map i recolor
map r reload
map R rotate
map p print

map [index] g navigate_index top
map [index] <C-d> feedkeys jjjjjjjjjj
map [index] <C-u> feedkeys kkkkkkkkkk
