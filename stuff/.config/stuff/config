# stuff's config

# ============
# = Functions
# ============

INIT
	root()    { exec sudo -A "$@" ;}
	tui()     { exec ${TERMINAL:?} -e "$@" ;}
	tuiroot() { exec ${TERMINAL:?} -e sudo -A "$@" ;}
	web()     { exec ${BROWSER:-xdg-open} "$@" ;}

# ============
# = GUI stuff
# ============

 Firefox,  Browser
	exec firefox

漣 Grub
	root grub-customizer

 Mail,  NeoMutt
	tui neomutt

 Notify Unread Mails
	unread

 ClawsMail
	exec claws-mail --alternate-config-dir ~/.local/share/claws-mail

 GParted,  Partitioning
	root gparted

 Ventoy,  ISO
	root ventoygui

 Book Reader,  Foliate
	exec foliate

 ARandR
	exec arandr

 Miracast
	exec gnome-network-displays

 Steam
	export HOME=~/.local/share/SteamHome && mkdir -p ~ && exec steam

響 TS3, 響 TeamSpeak
	trayrun teamspeak3 TeamSpeak ts3client_linux_amd64

響 Ripcord
	trayrun ripcord

響 Discord
	exec discord

 Telegram
	exec telegram-desktop

 AnyDesk
	trayrun anydesk

朗 Printers
	exec system-config-printer

 Gimp
	exec gimp

 Reset Tor
	exec restor

 VirtualMic
	exec virtualmic

 Syncthing
	exec syncthingopen

 Clock
	exec dclock -bg black -led_off black -nofade -seconds -bell -slope 50

 OBS,  Recorder
	exec obs

 Color Picker
	exec gcolor3

 KiCad,  PCB
	exec kicad

蓼 Pavucontrol
	exec pavucontrol

# ============
# = Web stuff
# ============

 Whatsapp
	if command -v whatsapp-for-linux; then
		exec whatsapp-for-linux
	else
		web https://web.whatsapp.com
	fi

朗 CUPS
	web localhost:631

# open the router config webpage
泌 Router
	set -- $(ip r)
	web http://"$3"

 Github
	web https://github.com/soystemd

 AUR
	user=soystemd
	web "https://aur.archlinux.org/packages/?SeB=m&K=$user&PP=250"

 Tailscale Management
	web https://tailscale.com/admin

# open the network login webpage
# https://en.wikipedia.org/wiki/Captive_portal
﫻 Network Login, 﫻 Captive Portal
	set -- $(nmcli -g ip4.dns dev show)
	web http://"$(drill @"$1" neverssl.com | grep -m1 '^[^;]' | cut -f5)"

