# stuff's config

# ============
# = Functions
# ============

INIT
	root()    { exec sudo -A "$@" ;}
	tui()     { exec ${TERMINAL:?} -e "$@" ;}
	tuiroot() { exec ${TERMINAL:?} -e sudo -A "$@" ;}
	web()     { exec ${BROWSER:-xdg-open} "$@" ;}

# ============
# = GUI stuff
# ============

Firefox, Browser
	exec firefox

Grub
	root grub-customizer

Mail, NeoMutt
	tui neomutt

Notify Unread Mails
	unread

ClawsMail
	exec claws-mail --alternate-config-dir ~/.local/share/claws-mail

GParted, Partitioning
	root gparted

Ventoy, ISO
	root ventoygui

Book Reader, Foliate
	exec foliate

aRandr
	exec arandr

Miracast
	exec gnome-network-displays

Steam
	export HOME=~/.local/share/SteamHome && mkdir -p ~ && exec steam

TS3
	trayrun teamspeak3 TeamSpeak ts3client_linux_amd64

Ripcord
	trayrun ripcord

Discord
	exec discord

Telegram
	exec telegram-desktop

AnyDesk
	trayrun anydesk

Printers
	exec system-config-printer

Gimp
	exec gimp

Reset Tor
	exec restor

VirtualMic
	exec virtualmic

Syncthing
	exec syncthingopen

Footabll
	exec fstream

Clock
	exec dclock -bg black -led_off black -nofade -seconds -bell -slope 50

OBS, Recorder
	exec obs

Color Picker
	exec gcolor3

KiCad, PCB
	exec kicad

Symphytum
	exec symphytum

Pavucontrol
	exec pavucontrol

# ============
# = Web stuff
# ============

Whatsapp
	if command -v whatsapp-for-linux; then
		exec whatsapp-for-linux
	else
		web https://web.whatsapp.com
	fi

CUPS
	web localhost:631

# open the router config webpage
Router
	set -- $(ip r)
	web http://"$3"

Github
	web https://github.com/soystemd

AUR
	user=soystemd
	web "https://aur.archlinux.org/packages/?SeB=m&K=$user&PP=250"

Tailscale Management
	web https://tailscale.com/admin

# open the network login webpage
# https://en.wikipedia.org/wiki/Captive_portal
Network Login, Captive Portal
	set -- $(nmcli -g ip4.dns dev show)
	web http://"$(drill @"$1" neverssl.com | grep -m1 '^[^;]' | cut -f5)"

# ============
# = TUI stuff
# ============

Newsboat, RSS
	tui nboat

Reddit
	tui tuir

CPU, htop
	tui htop

NetTop
	tuiroot nethogs -l

IOTop
	tuiroot iotop

i7z
	tuiroot i7z

Reset Router
	tui resrouter

lsusb, Devices
	tui watchusb

Mixer
	tui pulsemixer

Cava, Visualizer
	tui cava

Music
	tui ncmpcpp

Bashmount
	tui bashmount

Dictionary, Translate
	tui dictfzf

Calculator
	tui calc

TV
	tui tv

Transmission, Torrents, tremc
	pidof -q transmission-daemon || transmission-daemon
	tui tremc

Kill Transmission
	killall transmission-daemon

Download Manager, aria2
	tui aria2p

Services, Runit
	tui svfzf

# ==============
# = dmenu stuff
# ==============

Autolock
	exec autolock

No Autolock
	exec autolock -p

Wine Programs
	exec beer -d

Beer, Wine Management
	tui beer

FTP
	exec dftp

SFTP
	exec dsftp

Screenshot
	exec dshot

Emojies
	exec demoji

VPN
	exec dvpn

Sound Card Profiles
	exec dpaprofile

dRandr, Monitors, HDMI
	exec drandr

NetworkManager, Wi-Fi, Internet
	exec networkmanager_dmenu

Last Notification
	exec dunstctl history-pop

YouTube
	exec yt

Passwords
	exec dpass

Download Manager Config, aria2 Config
	exec daria2

Manuals
	exec dman

